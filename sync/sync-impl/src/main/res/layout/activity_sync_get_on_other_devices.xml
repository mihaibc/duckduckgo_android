<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/includeToolbar"
            layout="@layout/include_default_toolbar" />

        <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
            android:id="@+id/getDesktopApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_4"
            app:leadingIconBackground="circular"
            app:leadingIcon="@drawable/ic_device_laptop_24"
            app:primaryText="@string/sync_get_apps_on_other_platform_desktop_title"
            app:secondaryText="@string/sync_get_apps_on_other_platform_desktop_subtitle" />

        <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
            android:id="@+id/getIosApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_3"
            app:leadingIconBackground="circular"
            app:leadingIcon="@drawable/ic_platform_apple_24"
            app:primaryText="@string/sync_get_apps_on_other_platform_ios_title"
            app:secondaryText="@string/sync_get_apps_on_other_platform_ios_subtitle" />

        <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
            android:id="@+id/getAndroidApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_3"
            app:leadingIconBackground="circular"
            app:leadingIcon="@drawable/ic_platform_android_24"
            app:primaryText="@string/sync_get_apps_on_other_platform_android_title"
            app:secondaryText="@string/sync_get_apps_on_other_platform_android_subtitle" />

    </LinearLayout>
</ScrollView>